{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "enabledManagers": ["dockerfile"],
  "packageRules": [
    {
      "description": "Automatically merge minor and patch updates, do not create PRs. Ignoring tests because there are none.",
      "automerge": true,
      "matchUpdateTypes": ["minor", "patch"],
      "automergeType": "branch",
      "ignoreTests": true
    }
  ],
  "schedule": [
    "before 4am"
  ]
}
