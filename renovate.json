{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "enabledManagers": ["dockerfile"],

  "packageRules": [
    {
      "description": "Automatically merge minor and patch updates.",
      "matchDatasources": ["docker"],
      "automerge": true,
      "matchUpdateTypes": ["minor", "patch"]
    }
  ]
}
